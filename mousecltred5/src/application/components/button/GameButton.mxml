<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" 
		 buttonMode="true" 
		 rollOver="onRollOver(event)" rollOut="onRollOut(event)" mouseDown="onmDown(event)" mouseUp="onmUp(event)">
	<s:states>
		<s:State name="normal"/>
		<s:State name="over"/>
		<s:State name="press"/>
	</s:states>
	<fx:Script>
		<![CDATA[
			[Bindable]
			public var label:String;
			[Bindable]
			public var buttonRotation:Number = 0;
			[Bindable]
			public var textPaddingLeftRight:Number = 7;
			[Bindable]
			public var textPaddingTopBottom:Number = 5;
			
			private var _over:Boolean = false;
			
			public var data:Object;

			protected function onRollOver(event:MouseEvent):void{
				currentState = "over";
				_over = true;
			}
			protected function onRollOut(event:MouseEvent):void{
				currentState = "normal";
				_over = false;
			}
			protected function onmDown(event:MouseEvent):void{
				currentState = "press";
			}
			protected function onmUp(event:MouseEvent):void{
				if (_over) currentState = "over";
				else currentState = "normal";
			}

		]]>
	</fx:Script>

	
		<s:Rect width="100%" height="100%" includeIn="normal">
			<s:stroke>
				<s:SolidColorStroke color="0x262626"/>
			</s:stroke>
			<s:fill>
				<s:LinearGradient rotation="{buttonRotation + 90}">
					<s:entries>
						<s:GradientEntry color="0x5E5E5E" ratio="0" alpha="1"/>						
						<s:GradientEntry color="0x151515" ratio="1" alpha="1"/>
					</s:entries>
				</s:LinearGradient>
			</s:fill>
		</s:Rect>
	
	<s:Rect width="100%" height="100%" includeIn="over">
		<s:stroke>
			<s:SolidColorStroke color="0x262626"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="{buttonRotation + 90}">
				<s:entries>
					<s:GradientEntry color="0x626262" ratio="0" alpha="1"/>						
					<s:GradientEntry color="0x373737" ratio="1" alpha="1"/>
				</s:entries>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:Rect width="100%" height="100%" includeIn="press">
		<s:stroke>
			<s:SolidColorStroke color="0x262626"/>
		</s:stroke>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:entries>
					<s:GradientEntry color="0x5E5E5E" ratio="0" alpha="1"/>						
					<s:GradientEntry color="0x151515" ratio="1" alpha="1"/>
				</s:entries>
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	
	<s:HGroup width="100%" height="100%" verticalAlign="middle" horizontalAlign="center" left="{textPaddingLeftRight}" right="{textPaddingLeftRight}" bottom="{textPaddingTopBottom}" top="{textPaddingTopBottom}" rotation="{buttonRotation}">
		<s:Label width="100%" textAlign="center" text="{label}" fontSize="12" color="0xffffff" fontWeight="bold"/>			
	</s:HGroup>	
</s:Group>
